@model PersonAddRequest
@{
    ViewBag.Title = "Create Person";
}
<a asp-controller="Person" asp-action="Index">Back to Person List</a>
<h2>Create Person</h2>
<div class="w-50">
    <form asp-controller="Person" asp-action="Create" method="post">
        <div class="form-field flex">
            @*PersonName*@
            <div class="w-25">
                <label class="form-label pt" for="PersonName">Person Name</label>
            </div>
            <div class="flex-1">
                <input asp-for="PersonName" class="form-input" />
            </div>
        </div>
        <div class="form-field flex">
            @*Email*@
            <div class="w-25">
                <label class="form-label pt" for="Email">Email</label>
            </div>
            <div class="flex-1">
                <input asp-for="Email" class="form-input" />
            </div>
        </div>
        <div class="form-field flex">
            @*DateOfBirth*@
            <div class="w-25">
                <label class="form-label pt" for="DateOfBirth">Date Of Birth</label>
            </div>
            <div class="flex-1">
                <input asp-for="DateOfBirth" class="form-input" />
            </div>
        </div>
        <div class="form-field flex">
            @*Gender*@
            <div class="w-25">
                <label class="form-label pt">Gender</label>
            </div>
            <div class="flex-1">
                @{
                    string[] genders = (string[])Enum.GetNames(typeof(GenderOptions));
                }
                @foreach (string gender in genders)
                {
                    <input asp-for="Gender" class="ml" type="radio" value="@gender" />
                    <label class="form-label" for="Gender">@gender</label>

                }
            </div>
        </div>
        <div class="form-field flex">
            @*Country*@
            <div class="w-25">
                <label class="form-label pt" for="CountryID">Country</label>
            </div>
            <div class="flex-1">
                <select class="form-input" asp-for="CountryID" asp-items="@ViewBag.Countries">
                </select>
            </div>
        </div>
        <div class="form-field flex">
            @*Address*@
            <div class="w-25">
                <label class="form-label pt" for="Address">Address</label>
            </div>
            <div class="flex-1">
                <textarea asp-for="Address" class="form-input"></textarea>
            </div>
        </div>
        <div class="form-field flex">
            @*ReceiveNewsLetters*@
            <div class="w-25">
                <label class="form-label pt" for="ReceiveNewsLetters">Receive News Letters</label>
            </div>
            <div class="flex-1">
                <input asp-for="ReceiveNewsLetters" class="form-input" />
            </div>
        </div>
        @*Submit*@
        <div class="form-field flex">
            <div class="w-25"></div>
            <div class="flex-1">
                <button class="button button-green-back">Create</button>
                @if (ViewBag.Errors != null)
                {
                    <div class="text-red ml">
                        <ul>
                            @foreach (string err in ViewBag.Errors)
                            {
                                <li class="ml">@err</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
    </form>
</div>
