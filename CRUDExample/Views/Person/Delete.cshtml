@model PersonResponse
@{
    ViewBag.Title = "Delete Person";
}
<a asp-controller="Person" asp-action="Index">Back to Person List</a>
<h2>Delete Person</h2>
<h3>Are you sure to delete this person?</h3>

<div class="center-box">
    <form asp-controller="Person" asp-action="Delete" method="post">
        <div class="form-field flex">
            @*PersonID*@
            <input asp-for=PersonID type="hidden" />
            @*PersonName*@
            <div class="w-25">
                <label asp-for="PersonName" class="form-label pt">Person Name</label>
            </div>
            <div class="flex-1">
                <input asp-for="PersonName" class="form-input" disabled="disabled" />
                <span asp-validation-for="PersonName" class="text-red"></span>
            </div>
        </div>

        @*Submit*@
        <div class="form-field flex">
            <div class="w-25"></div>
            <div class="flex-1">
                <button class="button button-red-back" type="submit">Delete</button>
                <div asp-validation-summary="All" class="text-red"></div>
                @if (ViewBag.Errors != null)
                {
                    <div class="text-red ml">
                        <ul>
                            @foreach (string err in ViewBag.Errors)
                            {
                                <li class="ml">@err</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
    </form>
</div>