@using ServiceContracts.Enums
@model IEnumerable<PersonResponse>
@{
    ViewBag.Title = "Person";
}
<form action="~/person/index" method="get">
    <h1>Person</h1>
    <div class="box flex">
        <div class="flex-1">
            <select class="form-input" name="searchBy">
                @foreach (KeyValuePair<string, string> pair in ViewBag.ColumnNameAndProperty)
                {
                    if (ViewBag.CurrentSearchBy == pair.Value)
                    {
                        <option value="@pair.Value" selected="selected">@pair.Key</option>

                    }
                    else
                    {
                        <option value="@pair.Value">@pair.Key</option>
                    }
                }
                @*example: searchBy=Email&searchString=123*@
            </select>
        </div>
        <div class="flex-1">
            <input name="searchString" type="search" class="form-input" placeholder="Search String" value="@ViewBag.CurrentSearchString" />
        </div>
        <div class="flex-1">
            <button class="button button-blue-back" type="submit">Search</button>
            <a href="~/person/index" class="link-hover">Clear All</a>
        </div>
    </div>
    <table class="table w-100 mt">
        <thead>
            @foreach (KeyValuePair<string, string> columnNameAndProperty in ViewBag.ColumnNameAndProperty)
            {
            <th>
                    @if (ViewBag.CurrentSortBy == columnNameAndProperty.Value)
                    {
                        @if (ViewBag.CurrentSortOrderOption == nameof(SortOrderOption.ASC))
                        {
                        <a href="~/person/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@columnNameAndProperty.Value&sortOrderOption=DESC">@columnNameAndProperty.Key</a>
                        <i class="fa-solid fa-sort-up"></i>
                        }
                        else
                        {
                        <a href="~/person/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@columnNameAndProperty.Value&sortOrderOption=ASC">@columnNameAndProperty.Key</a>
                        <i class="fa-solid fa-sort-down"></i>
                        }
                    }
                    else
                    {
                    <a href="~/person/index?searchBy=@ViewBag.CurrentSearchBy&searchString=@ViewBag.CurrentSearchString&sortBy=@columnNameAndProperty.Value&sortOrderOption=DESC">@columnNameAndProperty.Key</a>
                    }
            </th>
            }
        </thead>
        <tbody>
            @foreach (PersonResponse personResponse in Model)
            {
                <tr>
                    <td>@personResponse.PersonName</td>
                    <td>@personResponse.Email</td>
                    <td>@personResponse.DateOfBirth?.ToString("yyyy-MM-dd")</td>
                    <td>@personResponse.Gender</td>
                    <td>@personResponse.Country</td>
                    <td>@personResponse.Address</td>
                    <td>@personResponse.ReceiveNewsLetters</td>
                    <td>@personResponse.Age</td>
                </tr>
            }
        </tbody>
    </table>
</form>